            <div class='row-fluid'>
              <div class='span5'>
                <div class='well'>

                  <div class='pull-right'>
                    <%= time_ago_in_words(blackjack_game.created_at) %> ago
                  </div>
                  <br />
                  <%= blackjack_game.state.inspect %>
                </div>
              </div>
            </div>
        <% end # each %>
    <% end # if @debug_game %>

</div>
