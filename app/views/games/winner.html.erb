<h1>Determining Winners and Losers</h1>

<div id="games_nav">

  <% if current_game %>

      <p>The dealer has a -->  <%=  @dealer_cards  %>  total= <%= @dealer_total %>   </p>
      <% @display_cards = @dealer_cards  %> <%= render :partial => 'display-cards' %>

      <p>Player 1 has a --> <%=  @player1_cards  %>  total= <%= @player1_total %>  <%= @player1_status %> </p>
      <% @display_cards = @player1_cards  %> <%= render :partial => 'display-cards' %>

      <% if @num_players >= 2  %>
          <p>Player 2 has a --> <%=  @player2_cards  %>  total= <%= @player2_total %>  <%= @player2_status %> </p>
          <% @display_cards = @player2_cards  %> <%= render :partial => 'display-cards' %>
      <% end # @num_players >= 2 %>

      <% if @num_players >= 3  %>
          <p>Player 3 has a --> <%=  @player3_cards  %>  total= <%= @player3_total %>  <%= @player3_status %> </p>
          <% @display_cards = @player3_cards  %> <%= render :partial => 'display-cards' %>
      <% end # @num_players >= 3 %>

      <% if @num_players >= 4  %>
          <p>Player 4 has a --> <%=  @player4_cards  %>  total= <%= @player4_total %>  <%= @player4_status %> </p>
          <% @display_cards = @player4_cards  %> <%= render :partial => 'display-cards' %>
      <% end # @num_players >= 4 %>


<% end %>
  <br/>

</div>


    <% if @debug_game == "on" %>
